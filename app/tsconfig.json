{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "ES5",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["client/*"]
    },
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}
